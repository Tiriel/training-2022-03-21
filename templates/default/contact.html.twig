{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-md">
        <h1>Contact form</h1>
        {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.email) }}
            {{ form_row(form.subject) }}
            {{ form_row(form.message) }}
            <button type="submit" class="btn btn-primary">Send</button>
        {{ form_end(form) }}
    </div>
{% endblock %}