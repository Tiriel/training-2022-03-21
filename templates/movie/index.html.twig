{% extends 'base.html.twig' %}

{% block title %}Movie index{% endblock %}

{% block body %}
    <h1>Movie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Poster</th>
                <th>Country</th>
                <th>Released</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr>
                <td>{{ movie.id }}</td>
                <td>{{ movie.title }}</td>
                <td><img src="{{ movie.poster }}" height="150px"></td>
                <td>{{ movie.country }}</td>
                <td>{{ movie.released ? movie.released|date('Y-m-d') : '' }}</td>
                <td>{{ movie.price }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_movie_show', {'title': movie.title}) }}">show</a>
                    <a class="btn btn-secondary" href="{{ path('app_movie_edit', {'id': movie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_movie_new') }}">Create new</a>
{% endblock %}
